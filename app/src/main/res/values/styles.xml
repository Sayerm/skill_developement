<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#304CF6</item>
        <item name="colorPrimaryDark">#3949AB</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="LightActionStyle" parent="Theme.AppCompat.Light">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="NavAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>

    <style name="BottomNavigationView"
        parent="Widget.AppCompat.TextView">
    </style>

    <style name="BottomNavigationViewTs" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>
 <style name="BottomNavigationViewTs2" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigationView.Active2" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
    </style>

</resources>